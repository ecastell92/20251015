# ============================================================================
# ⚠️ IMPORTANTE: Este archivo NO se usa en producción
# ⚠️ Los valores reales deben configurarse en: iniciativas-backup/terraform.tfvars
# ⚠️ Este archivo solo sirve como referencia de qué valores necesita el módulo
# ============================================================================

# ─────────────────────────────────────────────────────────────────────────────
# EJEMPLO: Configuración básica
# ─────────────────────────────────────────────────────────────────────────────

aws_region         = "eu-west-1"
iniciativa         = "mvp"
environment        = "dev"
tenant             = "00"

central_backup_bucket_name = "00-dev-s3-bucket-central-bck-001-aws-notinet"
sufijo_recursos            = "bck-001-aws-notinet"

# ─────────────────────────────────────────────────────────────────────────────
# EJEMPLO: Configuración de tags y prefijos
# ─────────────────────────────────────────────────────────────────────────────

criticality_tag = "BackupCriticality"

allowed_prefixes = {
  Critico      = []
  MenosCritico = []
  NoCritico    = []
}

backup_tags = {
  ManagedBy    = "Terraform"
  Project      = "DataPlatformBackup"
  Environment  = "dev"
  Initiative   = "mvp"
  CostStrategy = "optimized"
}

# ─────────────────────────────────────────────────────────────────────────────
# EJEMPLO: Schedules por criticidad
# ─────────────────────────────────────────────────────────────────────────────

schedule_expressions = {
  Critico = {
    incremental = "rate(12 hours)"
    sweep       = "rate(7 days)"
    grandfather = "cron(0 3 1 * ? *)"
  }

  MenosCritico = {
    incremental = "rate(24 hours)"
    sweep       = "rate(14 days)"
    grandfather = "cron(0 3 1 */3 ? *)"
  }

  NoCritico = {
    sweep = "rate(30 days)"
  }
}

# ─────────────────────────────────────────────────────────────────────────────
# EJEMPLO: Control de backups
# ─────────────────────────────────────────────────────────────────────────────

force_full_on_first_run     = false
fallback_max_objects        = 100000
fallback_time_limit_seconds = 300

